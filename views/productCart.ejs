<body>
    <%- include('./partials/header')  %> 
    <main>
            <h2 class="orden"><i class="fa-solid fa-circle-check"></i>  CONFIRMA TU ORDEN</h2>


            <table>
                <thead>
                    <tr class="tabla-cabecera">
                        <th>Descripcion</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Precio Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="tabla-cuerpo">
                        <td><img src="/img/alimento3.jpg" alt="img alimento" class="img-tabla"></td>
                        <td><input type="text" name="cantidad" placeholder="1" class="tabla-cantidad"><i class="fa-solid fa-plus-minus plus"></i></td>
                        <td>Precio Unitario</td>
                        <td>Precio Total</td>
                    </tr>

                    <tr>
                        <td>Detalle del Producto</td>
                        <td></td>
                        <td></td>
                        <td class="trash">Eliminar <i class="fa-solid fa-trash-can"></i></td>
                    </tr>

                    <tr class="tabla-cuerpo">
                        <td><img src="/img/alimento1.webp" alt="img alimento" class="img-tabla"></td>
                        <td><input type="text" name="cantidad" placeholder="2" class="tabla-cantidad"><i class="fa-solid fa-plus-minus plus"></i></td>
                        <td>Precio Unitario</td>
                        <td>Precio Total</td>
                    </tr>

                    <tr>
                        <td>Detalle del Producto</td>
                        <td></td>
                        <td></td>
                        <td class="trash">Eliminar <i class="fa-solid fa-trash-can"></i></td>
                    </tr>

                    <tr class="tabla-footer">
                        <td></td>
                        <td></td>
                        <td>TOTAL</td>
                        <td>IMPORTE TOTAL</td>
                    </tr>
                </tbody>
            </table>

            <div class="boton-final">
                <button id="seguir-comprando" class="boton"><i class="fa-solid fa-cart-shopping"></i> SEGUIR COMPRANDO</button>
                <button id="confirmar-compra" class="boton">CONFIRMAR COMPRA</button>
            </div>
    </main>

    
    <%- include ('./partials/footer.ejs') %> 
