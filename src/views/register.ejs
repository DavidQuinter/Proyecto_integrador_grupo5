<body>
    <!--------------------- body ----------------->
    <%- include('./partials/header')  %>

    <!-------------------- MAIN --------------------->
    <main>
        <h1>Registro de Usuario</h1>
        <!-- <h3>Mundo Mascota DH</h3> -->


        <form action="/register" method="GET" style=" display: flex; 
            flex-direction: row; justify-content: center; text-align: center;">
            <div style="width: 800px;">
                <div>
                    <input type="text" class="input-registro" placeholder="Nombre">
                </div>
                <div><input class="input-registro" type="email" placeholder="E-mail"></div>
                <div><input class="input-registro" type="password" placeholder="Contraseña"></div>
                <div><input class="input-registro" type="password" placeholder="Repetir contraseña"></div>

                <div class="boton-final contenedor-botones ">
                    <button id="btnCrearCuenta" type="submit" class="boton boton-register">
                        <i class="fa-solid fa-user-check"></i> Crear cuenta
                    </button>
                    <button id="" type="reset" class="boton boton-register">
                        <i class="fas fa-trash-alt"></i> Limpiar
                    </button>
                </div>

            </div>



        </form>
    </main>

    <%- include ('./partials/footer.ejs') %>
